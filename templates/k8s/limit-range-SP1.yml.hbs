apiVersion: "v1"
kind: "LimitRange"
metadata:
  {{> common-metadata }}
  name: "jenkins-instance-limit-range" 
spec:
  limits:
    - type: "Pod"
      {{> limit-range-default-pod }}
      max:
        cpu: 8000m
        memory: 16384Mi
    - type: "Container"
      min:
        cpu: 100m
        memory: 4Mi
      default:
        cpu: 1000m
        memory: 1024Mi
      defaultRequest:
        cpu: 500m
        memory: 1024Mi
      max:
        cpu: 8000m
        memory: 16384Mi
apiVersion: "v1"
kind: "LimitRange"
metadata:
  {{> common-metadata }}
  name: "jenkins-instance-limit-range" 
spec:
  limits:
    - type: "Pod"
      {{> limit-range-default-pod }}
      max:
        cpu: 122000m
        memory: 247808Mi
    - type: "Container"
      min:
        cpu: 100m
        memory: 4Mi
      default:
        cpu: 2000m
        memory: 2048Mi
      defaultRequest:
        cpu: 500m 
        memory: 2048Mi
      max:
        cpu: 122000m
        memory: 247808Mi
jenkins:
  numExecutors: 0
  scmCheckoutRetryCount: 2
  mode: EXCLUSIVE
  systemMessage: ""
  globalNodeProperties:
    - envVars:
        env:
          - key: FOO
            value: BAR

  disableRememberMe: false
  agentProtocols:
    - "JNLP4-connect"
    - "Ping"

  authorizationStrategy:
    projectMatrix:
      grantedPermissions:
        {{> permissions }}

  markupFormatter: rawHtml
  crumbIssuer:
    standard:
       excludeClientIPFromCrumb: false
  remotingSecurity:
    enabled: true

  securityRealm:
    ldap:
      configurations:
        - server: ldapmaster
          rootDN: dc=eclipse,dc=org
          groupMembershipStrategy: fromGroupSearch
          groupSearchBase: ou=group
          userSearch: mail={0}
          displayNameAttributeName: cn
          mailAddressAttributeName: mail

  clouds:
  - kubernetes:
      name: "kubernetes"
      containerCapStr: "{{jenkins.maxConcurrency}}"
      jenkinsUrl: "http://jenkins-ui.{{project.shortName}}.svc.cluster.local{{deployment.prefix}}"
      jenkinsTunnel: "jenkins-discovery.{{project.shortName}}.svc.cluster.local:{{deployment.jnlpPort}}"
      maxRequestsPerHostStr: "32"
      namespace: "{{project.shortName}}"
      podRetention: "onFailure"
      templates:
      - containers:
        - image: "eclipsecbijenkins/jenkins-agent:3.27@sha256:60af6fd9cfdaec6888c5ee3957e2898a8b9dcc68d8543b6269dae1676bb808ed"
          livenessProbe:
            failureThreshold: 0
            initialDelaySeconds: 0
            periodSeconds: 0
            successThreshold: 0
            timeoutSeconds: 0
          name: "jnlp"
          resourceLimitMemory: "2.25Gi"
          resourceRequestMemory: "2.25Gi"
          ttyEnabled: true
          command: ""
          args: ""

        instanceCap: 5
        name: "default-agent"
        namespace: "{{project.shortName}}"
        nodeUsageMode: NORMAL
        volumes:
        - persistentVolumeClaim:
            claimName: "tools-claim-jiro-{{project.shortName}}"
            mountPath: "/opt/tools"
            readOnly: true
        - configMapVolume:
            configMapName: "known-hosts"
            mountPath: "/home/jenkins/.ssh/"
        - configMapVolume:
            configMapName: "m2-dir"
            mountPath: "/home/jenkins/.m2/"
        workspaceVolume:
          emptyDirWorkspaceVolume:
            memory: false

security:
  remotingCLI:
    enabled: false

unclassified:
  location:
    adminAddress: ci-admin@eclipse.org
    url: {{deployment.url}}

  mailer:
    adminAddress: ci-admin@eclipse.org
    replyToAddress: ci-admin@eclipse.org
    smtpHost: mail.eclipse.org

  globalDefaultFlowDurabilityLevel:
    durabilityHint: PERFORMANCE_OPTIMIZED

  simple-theme-plugin:
    elements:
    - cssUrl:
        url: "{{deployment.prefix}}/userContent/theme/quicksilver.css"
    - cssUrl:
        url: "//fonts.googleapis.com/css?family=Libre+Franklin:400,700,300,600,100"

tool:
  {{> tools-jdk }}
  {{> tools-ant }}
  {{> tools-maven }}
  git:
    installations:
    - name: "git"
      home: "/usr/bin/git"

jenkins:
  numExecutors: 0
  scmCheckoutRetryCount: 2
  mode: EXCLUSIVE
  systemMessage: ""
  globalNodeProperties:
    - envVars:
        env:
          - key: FOO
            value: BAR

  disableRememberMe: false
  agentProtocols:
    - "JNLP4-connect"
    - "Ping"

  authorizationStrategy:
    projectMatrix:
      grantedPermissions:
        {{> permissions }}

  markupFormatter: rawHtml
  crumbIssuer:
    standard:
       excludeClientIPFromCrumb: false
  remotingSecurity:
    enabled: true

  securityRealm:
    ldap:
      configurations:
        - server: ldapmaster
          rootDN: dc=eclipse,dc=org
          groupMembershipStrategy: fromGroupSearch
          groupSearchBase: ou=group
          userSearch: mail={0}
          displayNameAttributeName: cn
          mailAddressAttributeName: mail

  clouds:
  - kubernetes:
      name: "kubernetes"
      containerCapStr: "{{jenkins.maxConcurrency}}"
      jenkinsUrl: "http://jenkins-ui.{{project.shortName}}.svc.cluster.local{{deployment.prefix}}"
      jenkinsTunnel: "jenkins-discovery.{{project.shortName}}.svc.cluster.local:{{deployment.jnlpPort}}"
      maxRequestsPerHostStr: "32"
      namespace: "{{project.shortName}}"
      podRetention: "onFailure"
      templates:
      - containers:
        - image: "eclipsecbijenkins/jenkins-agent:3.27@sha256:c0e966ea6cd1f490d146496d87473c08a5cea32beb46ea169b884b35a5a08e0b"
          livenessProbe:
            failureThreshold: 0
            initialDelaySeconds: 0
            periodSeconds: 0
            successThreshold: 0
            timeoutSeconds: 0
          name: "jnlp"
          resourceLimitMemory: "1Gi"
          resourceRequestMemory: "1Gi"
          ttyEnabled: true
          command: ""
          args: ""

        instanceCap: 5
        name: "default-agent"
        namespace: "{{project.shortName}}"
        nodeUsageMode: NORMAL
        volumes:
        - persistentVolumeClaim:
            claimName: "tools-claim-jiro-{{project.shortName}}"
            mountPath: "/opt/tools"
            readOnly: true
        workspaceVolume:
          emptyDirWorkspaceVolume:
            memory: false

security:
  remotingCLI:
    enabled: false

unclassified:
  location:
    adminAddress: ci-admin@eclipse.org
    url: {{deployment.url}}

  mailer:
    adminAddress: ci-admin@eclipse.org
    replyToAddress: ci-admin@eclipse.org
    smtpHost: mail.eclipse.org

  globalDefaultFlowDurabilityLevel:
    durabilityHint: PERFORMANCE_OPTIMIZED

  simple-theme-plugin:
    elements:
    - cssUrl:
        url: "{{deployment.prefix}}/userContent/theme/quicksilver.css"
    - cssUrl:
        url: "//fonts.googleapis.com/css?family=Libre+Franklin:400,700,300,600,100"

tool:
  {{> tools-jdk }}
  {{> tools-ant }}
  {{> tools-maven }}
  git:
    installations:
    - name: "git"
      home: "/usr/bin/git"

credentials:
  system:
    domainCredentials:
      - domain :
          name: "oss.sonatype.org"
          description: "oss.sonatype.org domain"
          specifications:
            - hostnameSpecification:
                includes: "oss.sonatype.org"
        credentials:
          - usernamePassword:
              scope:    SYSTEM
              id:       ossrh
              username: ${oss_sonatype_org_username}
              password: ${oss_sonatype_org_password}